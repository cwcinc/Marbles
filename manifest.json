// manifest.json
{
  "manifest_version": 2,
  "name": "Marble Mod",
  "version": "1.0",
  "description": "Description of your extension",
  "permissions": ["https://www.marblerun.at/"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.marblerun.at/"],
      "js": ["content.js"]
    }
  ]
}
